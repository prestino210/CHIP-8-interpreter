CC = gcc
CFLAGS = -Iinclude -IC:/deps/SDL3/include -Wall -O2
LDFLAGS = -LC:/deps/SDL3/lib -lSDL3main -lSDL3

SRC_DIR = src
BUILD_DIR = build
BIN_DIR = $(BUILD_DIR)/bin

# Sources and objects
SRCS = $(wildcard $(SRC_DIR)/*.c) start.c
OBJS = $(patsubst %.c,$(BUILD_DIR)/%.o,$(SRCS))

# Output executable
TARGET = $(BIN_DIR)/output.exe

# Default rule
all: $(TARGET)

# Build executable
$(TARGET): $(OBJS) | $(BIN_DIR)
	$(CC) $(OBJS) -o $@ $(LDFLAGS)

# Build object files
$(BUILD_DIR)/%.o: %.c | $(BUILD_DIR)
	$(CC) $(CFLAGS) -c $< -o $@

# Create directories if missing
$(BUILD_DIR):
	mkdir -p $(BUILD_DIR)

$(BIN_DIR):
	mkdir -p $(BIN_DIR)

# Clean
clean:
	rm -rf $(BUILD_DIR)/*.o $(TARGET)

.PHONY: all clean
